<configuration>

    <!-- Define la salida de los registros -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define el nivel de registro para la raÃ­z del logger -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
